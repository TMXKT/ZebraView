<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <com.example.zebraview.ZebraView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            app:zbv_bg_color_end="#FFAA53"
            app:zbv_bg_color_start="#FF681A"
            app:zbv_corner_radius="3dp"
            app:zbv_interval="10dp"
            app:zbv_line_color_end="#FFB661"
            app:zbv_line_color_start="#FF7929"
            app:zbv_line_width="12dp"
            app:zbv_mirror="false" />

        <com.example.zebraview.ZebraView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="#111111"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:zbv_bg_color_end="#FFAA53"
            app:zbv_bg_color_start="#FF681A"
            app:zbv_corner_radius="3dp"
            app:zbv_interval="10dp"
            app:zbv_line_color_end="#FFB661"
            app:zbv_line_color_start="#FF7929"
            app:zbv_line_width="12dp"
            app:zbv_mirror="true" />

        <com.example.zebraview.ZebraView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:zbv_bg_color_end="#FFAA53"
            app:zbv_bg_color_start="#FF681A"
            app:zbv_corner_radius_top_left="5dp"
            app:zbv_corner_radius_bottom_right="5dp"
            app:zbv_interval="10dp"
            app:zbv_line_color_end="#FFB661"
            app:zbv_line_color_start="#FF7929"
            app:zbv_line_width="12dp"
            app:zbv_mirror="false" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.example.zebraview.ZebraView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                app:zbv_bg_color_end="#FFAA53"
                app:zbv_bg_color_start="#FF681A"
                app:zbv_corner_radius_top_left="5dp"
                app:zbv_corner_radius_bottom_right="5dp"
                app:zbv_interval="10dp"
                app:zbv_line_color_end="#FFB661"
                app:zbv_line_color_start="#FF7929"
                app:zbv_line_width="12dp"
                app:zbv_mirror="false" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

